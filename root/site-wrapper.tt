<!DOCTYPE html>

<html>
	[% INCLUDE 'includes/head.tt' %]

	<body>
		<div id="page-wrapper">
			<div id="header-wrapper">
				<div class="container">
					<header id="header">
						<div class="inner">
							<h1>
								<a href="[% c.uri_for( '/' ) %]" id="logo">[% c.config.site_name OR 'ShinySite' %]</a>
							</h1>

							<!-- TODO: style the search form properly -->
							<form id="search_form" action="/search" method="post" style="width:150px;margin-left:200px;padding-top:10px">
								<p>
									<input type="text" name="search" id="search" value="Search the site" onfocus="javascript:value='';" onblur="javascript:value=='Search the site';" />
									<input type="image" src="/static/images/search.png" class="search" value="" />
								</p>
							</form>

							[% INCLUDE 'includes/menu.tt' %]
						</div>
					</div>
				</div>
			</div>

			<div id="main-wrapper">
				[%- IF error_msg  %]<div class="error" >[% error_msg  %]</div>[% END %]
				[%- IF status_msg %]<div class="status">[% status_msg %]</div>[% END %]
				
				[%- content %]
			</div>
		</div>

		[% INCLUDE 'includes/footer.tt'    %]
		[% INCLUDE 'admin/site-toolbar.tt' %]
	</body>
</html>
